<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAuthorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Авторизация"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back" />

    <ImageView
        android:id="@+id/imgRedRoundAuthorized"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/ic_red_round"
        app:layout_constraintBottom_toBottomOf="@+id/txtAuthorization"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtAuthorizationMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/AuthorizationMsg"
        android:textColor="#DDFF0000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthorization" />

    <ImageView
        android:id="@+id/imgEntrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/button_field_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthorizationMsg" />

    <ImageView
        android:id="@+id/imgSortType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/button_field_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEntrance" />

    <TextView
        android:id="@+id/txtEntrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textSize="22sp"
        android:textColor="@color/yellow_note_txt"
        app:layout_constraintBottom_toBottomOf="@+id/imgEntrance"
        app:layout_constraintEnd_toEndOf="@+id/imgEntrance"
        app:layout_constraintStart_toStartOf="@+id/imgEntrance"
        app:layout_constraintTop_toTopOf="@+id/imgEntrance" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:textSize="22sp"
        android:textColor="@color/red_note_txt"
        app:layout_constraintBottom_toBottomOf="@+id/imgSortType"
        app:layout_constraintEnd_toEndOf="@+id/imgSortType"
        app:layout_constraintStart_toStartOf="@+id/imgSortType"
        app:layout_constraintTop_toTopOf="@+id/imgSortType" />

</androidx.constraintlayout.widget.ConstraintLayout>